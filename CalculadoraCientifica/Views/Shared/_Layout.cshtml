<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>@ViewData["Title"] - CalculadoraCientifica</title>
   <link rel="stylesheet" href="~/css/Site.css" />
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
   <asp:ContentPlaceHolder ID="HeadContent" runat="server">
   </asp:ContentPlaceHolder>
   <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
   <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
   <header>
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow mb-3 align-items-start">
         <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CalculadoraCientifica</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
               <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                     <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Calculadora</a>
                  </li>
                  @if (User?.Identity?.IsAuthenticated == true)
                  {
                     <li class="nav-item">
                        <a id="history" class="nav-link text-light" asp-controller="Historial" asp-action="Historial" title="Historial">Historial de Operaciones</a>
                     </li>
                     <li class="nav-item">
                        <a id="manage" class="nav-link text-light" asp-controller="Account" asp-action="Profile" title="Perfil">
                           <svg style="height:1rem; width:1rem; margin-bottom:0.22rem" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path path fill="#ffffff" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" /></svg>
                           Perfil
                        </a>
                     </li>
                     <li class="nav-item">
                        <a id="logout" class="nav-link text-light" asp-controller="Account" asp-action="Logout" title="Logout">
                           <svg style="height:1rem; width:1rem; margin-bottom:0.22rem" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path path fill="#ffffff" d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z" /></svg>
                           Logout
                        </a>

                     </li>
                  }
                  else
                  {
                     <li class="nav-item">
                        <a class="nav-link text-light" id="register" asp-controller="Account" asp-action="Register">Registrar</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link text-light" id="login" asp-controller="Account" asp-action="Login">Login</a>
                     </li>
                  }
               </ul>
            </div>
         </div>
      </nav>
   </header>
   <div class="container">
      <main role="main">
         @RenderBody()
      </main>
   </div>

   <footer class=" text-muted text-center">
      <div class="container">
         &copy; 2023 - Carlos José Mecha - CalculadoraCientifica - <a asp-controller="Home" asp-action="Privacy"> Privacidad</a>
      </div>
   </footer>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/node_modules/mathjs/lib/browser/math.js"></script>
   @await RenderSectionAsync("Scripts", required: false)
   @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
